extends layout

block content

    .well.well-large
        
        form.form-horizontal(method="post",action="/user/signin")
            .control-group
                label.control-label(for="username") 用户名
                .controls
                    input#username(name="username",type="text",placeholder="用户名")
            .control-group
                label.control-label(for="password") 密码
                .controls
                    input#password(name="password",type="password",placeholder="密码",autocomplete="off")
            .control-group
                .controls
                    button.btn(type="submit")  登 录 
                    input(type="hidden",name="ret",value='#{query.ret||""}')

        - if (locals.errmsg) 
            .alert.alert-error 
                button.close(data-dismiss='alert',type='button') x
                strong Error!
                span  #{errmsg}

        - if (locals.msg) 
            .alert.alert-success 
                button.close(data-dismiss='alert',type='button') x
                strong Success!
                span  !{msg}



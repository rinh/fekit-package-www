extends layout

block content
    
    .well.well-large
        
        form#frm.form-horizontal(method="post",action="/user/signup")
            .control-group
                label.control-label(for="username") 用户名
                .controls
                    input#username(name="username",type="text",placeholder="用户名")
            .control-group
                label.control-label(for="password") 密码
                .controls
                    input#password(name="password",type="password",placeholder="密码",autocomplete="off")
            .control-group
                label.control-label(for="repassword") 重复密码
                .controls
                    input#repassword(name="repassword",type="password",placeholder="重复密码")
            .control-group
                .controls
                    button.btn(type="submit") 注册

        - if (locals.errmsg) 
            .alert.alert-error 
                button.close(data-dismiss='alert',type='button') x
                strong Error!
                span  #{errmsg}

        - if (locals.msg) 
            .alert.alert-success 
                button.close(data-dismiss='alert',type='button') x
                strong Success!
                span  !{msg}
block js
    script
        var TAB = "signup";

        $('#frm').bind('submit',function(e){

            if( $('#username').val() == "" ) {
                alert('用户名不能为空');
                return false;
            }

            if( /^[a-z\.]{5}$/i.test( $('#username').val() ) ) {
                alert('用户名必须使用英文或点号，且需要大于5位');
                return false;
            }

            if( $('#password').val() == "" ) {
                alert('密码不能为空');
                return false;
            }

            if( $('#repassword').val() != $('#password').val() ) {
                alert('重复密码必须输入一致');
                return false;
            }

            return true;
        })



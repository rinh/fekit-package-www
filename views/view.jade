extends layout

block content

    - if (err)

        .alert
            发生异常错误：#{err}

    - else

        h3 #{info.name} @ #{info.version}

            span.f14.m30 #{info.description}

        pre
            p tags: 
                span#tags #{info.tags.join(' , ')}
                a#edit_tag(href='#') [修改tag]

            p author: #{info.config.author} &lt; #{info.config.email} &gt;
        
            p download: 
                a(href='#{info.dist.tarball}') #{info.name}-#{info.version}.tgz
            
            p docs:
                a(href='/docs/#{info.name}/#{info.version}/') 查看

            p dependencies:
                each val , key in (info.config.dependencies||{})
                    em.pad3 #{key}

        .announce
            article.markdown-body !{readme}

        p 
            h3 历史版本

            ul
                each val , ver in all.versions
                    li
                        a(href='/view/#{info.name}/#{ver}/') #{ver}


    #tageditor(style='display:none;')
        p 编辑 tags (以逗号分隔)
            input#tags(type='text',name='tags',data-pkgname="#{info.name}",value="#{info.tags.join(',')}")

block js
    
    script(type='text/javascript')

        function get_tags(){
            var s = $("input#tags").val().split(',');
            var _s = []
            for( var i = 0; i < s.length; i++ ) {
                _s.push( $.trim(s[i]) )
            }
            return _s;
        }

        function save_tag(){
            var pkgname = $("input#tags").data('pkgname');
            var tags = get_tags();

            $.getJSON('/update_tags/' + pkgname , {
                tags : tags.join(',')
            }, function( data ){
                if( data.ret ) {
                    $("span#tags").html( tags.join(' , ') )
                    $("#tageditor").dialog('close')
                } else {
                    alert( data.errmsg )
                }
            })
        }

        $("#tageditor").dialog({
            autoOpen: false , 
            modal: true ,
            buttons: {
                '确定' : function(){
                    save_tag()
                } , 
                '取消' : function(){
                    $("#tageditor").dialog('close')
                }
            }
        });

        $("input#tags").keypress(function(evt){
            if( evt.keyCode == 13 ) {
                save_tag();
            }
        })

        $("#edit_tag").click(function(evt){
            $("#tageditor").dialog('open');
            return false;
        });

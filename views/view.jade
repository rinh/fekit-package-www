extends layout

block content

    - if (err)

        .alert
            发生异常错误：#{err}

    - else

        h3 #{info.name} @ #{info.version}

            span.f14.m30 #{info.description}

        pre
            p 作者: #{info.config.name} 
            p 联系方式: #{info.config.email}
            span tar下载: 
            a(href='#{info.dist.tarball}') #{info.name}-#{info.version}.tgz

        .announce
            article.markdown-body !{readme}

        p 
            h3 历史版本

            ul
                each val , ver in all.versions
                    li
                        a(href='/view/#{info.name}/#{ver}/') #{ver}
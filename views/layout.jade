doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/jquery-ui.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		a(href="http://github.com/rinh/fekit")
			img(alt="Fork me on GitHub",src="/images/forkme_right_darkblue_121621.png",style="position: absolute; top: 0; right: 0; border: 0;")

		.wrap
			.hero-unit
				h1 #{title}
				p 搜索,查看源中的组件

			.navbar
				.navbar-inner
					a.brand(href="/") index
					a.brand(href="/tags") tags
					form.navbar-form.pull-right
						input#search.search-query(type='text',placeholder='组件名称或描述',value='#{keyword}') 

			block content


			script(src='/javascripts/jquery-1.9.1.min.js')
			script(src='/bootstrap/js/bootstrap.min.js')
			script(src='/javascripts/jquery-ui.js')
			script(src='/javascripts/common.js')
			block js